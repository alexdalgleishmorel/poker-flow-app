files:
  "/etc/nginx/conf.d/00_prod_nginx.conf":
    content: |
      server {
        listen 80;
        server_name localhost;

        location / {
          root /var/app/current/dist;
          index index.html;
          try_files $uri $uri/ =404;
        }
      }

container_commands:
  01_reload_nginx:
    command: "systemctl restart nginx"
